<div class="card border-secondary mb-3">
    <form action="/auth/login" method="POST">
        <div class="form-group p-3">
            <label for="username">Username</label>
            <input type="text" name="username" class="form-control" id="username" aria-describedby="userHelp"
                placeholder="Username" required>
            <small id="userHelp" class="form-text text-muted">Write Down Your Username </small>
        </div>
        <div class="form-group p-3">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" id="password" aria-describedby="passwordHelp"
                placeholder="Password" required>
            <small id="passwordHelp" class="form-text text-muted">Write Down Your Password.</small>
        </div>

        <button type="submit" class="btn btn-primary m-3">Submit</button>
    </form>
</div>